<mapper namespace="com.spring.hotelspace.client.mypage.dao.ClientMyPageDAO">

<update id="updateMyInfo" parameterType="clientLoginVO">
		UPDATE client
		SET
		CLIENT_TEL=#{clientTel},
		CLIENT_EMAIL=#{clientEmail}
		where client_id=#{clientId}
	</update>
	
	<select id="selectAll" parameterType="clientLoginVO" resultType="clientLoginVO">
		SELECT 
		*
		FROM client 
		WHERE client_id = #{clientId}
	</select>
	
	   <update id="updatePW" parameterType="ClientMyPageVO">
      UPDATE CLIENT
      SET
      CLIENT_PASSWORD= #{clientPassword}
      WHERE
      CLIENT_ID = #{clientId}
   </update>
   
   
   <!-- a-jax 비밀번호 체크 -->
   <select id="checkPw" parameterType="ClientMypageVO"
      resultType="java.lang.Integer">
      SELECT NVL(COUNT(*),0)
      FROM CLIENT WHERE
      client_Password=#{clientPassword}
   </select>
   
	
	
